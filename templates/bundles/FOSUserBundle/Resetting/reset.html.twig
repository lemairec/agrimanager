{% extends 'base_agri.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="d-flex align-items-center bd-highlight mt-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-xs-10 col-sm-12 col-md-8 col-lg-6 mt-2">
				<div class="card ">
				    <div class="card-header">
						Changer mon mot de passe
					</div>
                    <div class="card-body">
						{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
	                        <div class="form-group row top-spacer-medium">
	                            <div class="col-sm-12">
	                                <label for="fos_user_registration_form_plainPassword_first" class="required">{{ 'form.new_password'|trans }}</label>
	                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
	                            </div>
	                        </div>
	                        <div class="form-group row">
	                            <div class="col-sm-12">
	                                <label for="fos_user_registration_form_plainPassword_second" class="required">{{ 'form.new_password_confirmation'|trans }}</label>
	                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
	                            </div>
	                        </div>

	                        <input id="_submit" class="btn btn-primary ab-rounded top-spacer-small" value="{{ 'resetting.request.submit'|trans }}" type="submit">
	    				{{ form_end(form) }}
	                </div>
	                <div class="card-body">
						<p>
   						 Vous n’avez pas de compte : <a href="{{ url('fos_user_registration_register') }}">Créez un compte</a>
   						 <br>
   						 Vous avez un compte : <a href="{{ url('fos_user_security_login')}}">Se connecter</a>
   					 	</p>
					</div>
    		    </div>
            </div>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
