{% extends 'base_agri.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="d-flex align-items-center bd-highlight mt-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-xs-10 col-sm-12 col-md-8 col-lg-6 mt-2">
                <div class="card ">
				    <div class="card-header">
						Retrouver mon mot de passe
					</div>
                    <div class="card-body">
						<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request" role="form">
	    					<div class="form-group">
	    						<label for="username" class="control-label">{{ 'resetting.request.username'|trans }}</label>
	    						<input id="username" name="username" required="required" class="form-control" placeholder="Username or email" type="text">
	    					</div>

							<input id="_submit" class="btn btn-primary ab-rounded" value="{{ 'resetting.request.submit'|trans }}" type="submit">
	    				</form>
					</div>
	                <div class="card-body">
	                    <p>
	                        Vous n’avez pas de compte : <a href="{{ url('fos_user_registration_register') }}">Créez un compte</a>
	                        <br>
	    					Vous avez un compte <a href="{{ url('fos_user_security_login')}}">Se connecter</a>
	                    </p>
	    		    </div>
				</div>
            </div>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
