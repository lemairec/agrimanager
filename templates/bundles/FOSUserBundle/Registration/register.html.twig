{% extends 'base_agri.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form _self %}

{% block form_row %}
<div class="form-group">
    {{ form_label(form) }}
    {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form) }}
</div>
{% endblock form_row %}

{% block fos_user_content %}
<div class="d-flex align-items-center bd-highlight mt-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-xs-10 col-sm-12 col-md-8 col-lg-6 mt-2">
                <div class="card ">
                    <div class="card-header">
                        Enregistrement
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <input type="submit" class="btn btn-primary"  value="{{ 'registration.submit'|trans }}" />
                        {{ form_end(form) }}
                    </div>
                    <div class="card-body">
	                    <p>
	                        Vous avez un compte : <a href="{{ url('fos_user_security_login')}}">Se connecter</a>
	                    </p>
	    		    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
