{% extends 'base_agri.html.twig' %}

{% block body %}
<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <table class="table">
        <tr>
            <th>Culture</th>
            <th>Ann√©e</th>
            <th class="text-right">Litre</th>
            <th class="text-right">Ha</th>
            <th></th>
        </tr>
        {% for line in lines %}
            <tr>
                <td>{{line.date | showDate}}</td>
                <td>{{line.type}}</td>
                {% if line.type == 'gasoil' %}
                    <td class="text-right">{{line.litre | showLitre}}</td>
                    <td></td>
                    <td class="text-right">{{line.sumL | showLitre}}</td>
                    <td class="text-right">{{line.conso | showUnity("l/ha")}}</td>
                {% else %}
                    <td></td>
                    <td class="text-right">{{line.ha | showHa}}</td>
                    <td class="text-right">{{line.sumHa | showHa}}</td>
                    <td></td>
                {% endif %}
            <tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
