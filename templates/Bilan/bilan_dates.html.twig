{% extends 'base_agri.html.twig' %}

{% block body %}
<div class="card">
    <table class="table">
        <tr>
            <th>Culture</th>
            <th>Intervention</th>
            {% for campagne in campagnes2 %}
                <th>{{ campagne.name }}</th>
            {% endfor %}
        </tr>
        {% for key,t in cultures %}
        <tr>
            <td><b>{{key}}</b></td>
            <td></td>
            {% for campagne in campagnes2 %}
                <td></td>
            {% endfor %}
        </tr>
        {% for key,t2 in t.interventions %}
            <tr>
                <td></td>
                <td>{{key}}</td>
                {% for campagne in campagnes2 %}
                    <td>
                    <ul>
                    {% for date in t2[campagne.name]["dates"] %}
                        <li>
                            <a href="{{ url("intervention", {'intervention_id': date["id"] }) }}">{{ date["date"] | showDate }}{% if date["name"]%} - {{ date["name"] }} {% endif %}
                        </li>
                    {% endfor %}
                    </ul>
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
        {% endfor %}
    </table>
</div>
{% endblock %}
