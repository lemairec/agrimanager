{% extends 'base_agri.html.twig' %}

{% block body %}
<div class="toto">


    <div class="card">
        <table class="table">
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for r in res %}
            <tr>
                <th>{{ r.intervention.datetime | showDate}}</th>
                <th>{{ r.intervention.surface }}</th>
                <th>{{ r.prix | showEur}}</th>
                <th>{{ r.sum | showEur}}</th>
            </tr>
            {% for p in r.intervention.produits %}
            <tr>
                <td></td>
                <td>{{ p.produit.name }}</td>
                <td>{{ p.getPriceHa() | showEurUnity("u") }}</td>
                <td></td>
            </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td colspan="2">
                    {% for p in r.intervention.parcelles %}
                    , {{ p.parcelle }} ({{ p.parcelle.surface | showHa}})
                    {% endfor %}
                <td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
