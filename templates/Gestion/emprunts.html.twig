{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        Emprunt
        <button type="button" class="btn btn-primary" onclick="window.location.href='/emprunt/0'">Ajouter</button>    
        
    </div>
    <table class="table" id="table">
        <tr>
            <th></th>
            <th>Date</th>
            <th>Montant</th>
            <th>Reste</th>
        </tr>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.name | my_path('emprunt', {'emprunt_id': emprunt.id}) | raw }}</td>
                <td>{{ emprunt.date | showDate }} </td>
                <td>{{ emprunt.montant | showEur }} </td>
                <td>{{ emprunt.reste | showEur }} </td>
            </tr>
        {% endfor %}

    </table>
</div>


{% endblock %}
