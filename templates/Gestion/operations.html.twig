{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/operation/0'">Ajouter une Operation</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/facture_fournisseur/0'">Ajouter une Facture</button>
        Operations
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Prix</th>
        </tr>
        {% for operation in operations %}
            <tr>
                <td><a href="/operation/{{operation.id}}">{{operation.getDateStr()}}</a></td>
                <td>
                    {% if operation.facture %}
                        Facture -
                    {% endif %}
                    {{operation.name}}
                </td>
                <td>0</td>
                <td><a href="/operation/{{operation.id}}/delete">d</td>
            </tr>
            {% for ecriture in operation.ecritures %}
                <tr>
                    <td></td>
                    <td>{{ecriture.compte.name}}</a></td>
                    <td>{{ ecriture.value | showEur }}</td>
                    <td></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </table>
</div>

{% endblock %}
