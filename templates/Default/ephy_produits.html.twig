{% extends 'base_agri.html.twig' %}

{% block body %}


<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">Panel heading</div>
    <table id="example" class="table" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Amm</th>
                <th>Name</th>
            </tr>
        </thead>
        <tfoot>
        </tfoot>
    </table>
</div>
{% endblock %}

{% block scripts %}
<script>
$(document).ready(function() {
    console.log("toto");
    $('#example').DataTable( {
        "ajax": "{{ url('ephy_produits_api') }}{% if all %}?all=1{% endif %}",

        "columnDefs": [{
            "targets": 0,
            "render": function ( data, type, row, meta ) {
                //console.log(itemID)
                return '<a href="/ephy_produit/' + data + '">' + data + '</a>';
            }
        }],
        "order": [[ 1, "asc" ]],
        "columns": [
            { "data": "amm" },
            { "data": "name" }
        ]
    } );
} );
</script>
{% endblock %}
