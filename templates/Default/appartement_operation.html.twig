{% extends 'base_form.html.twig' %}


{% block body %}

<div class="card mb-3">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_row(form.date) }}
        {{ form_row(form.type) }}
        {{ form_row(form.annee) }}
        {{ form_row(form.value) }}

        {% if operation.doc and (operation.doc.docName != '') %}
            <div class="form-group row">
                <div class="col-sm-10">
                    <embed src="{{ vich_uploader_asset(operation.doc, 'docFile') }}" width="500" height="800" type='application/pdf'>
                </div>
            </div>
        {% else %}
        {% endif %}
        {{ form_row(form.doc.docFile) }}
        <input type="submit" class="btn btn-primary" value="Sauvegarder" />
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
