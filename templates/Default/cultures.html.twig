{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        Cultures
        <button type="button" class="btn btn-primary" onclick="window.location.href='/culture/0'">{{'Add' | trans }}</button>
    </div>
    <div class="list-group">
        {% for culture in cultures %}
        <div class="list-group-item flex-column align-items-start" style="background-color:{{ culture.color}};">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">
                    <a href="{{ url("culture", {'culture_id': culture.id}) }}">{{culture.name}}
                    </a>
                </h5>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
