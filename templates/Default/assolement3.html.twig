{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/ilot/0'">{{'Add' | trans }}</button>
        Ilots
    </div>
    <table class="table">
        <tr>
            <td></td>
            {% for ilot in ilots %}
                {% for p in ilot["parcelles"] %}
                
                    {% if  p["idx"]==0%}
                        <td>{{ilot["ilot"].name}}</td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    
                {% endfor %}
            {% endfor %}
        </tr>

        <tr>
            <td></td>
            {% for ilot in ilots %}
                {% for p in ilot["parcelles"] %}
                    {% if  p["idx"]==0%}
                        <td>{{ilot["ilot"].surface}}</td>
                    {% else %}
                        <td></td>
                    {% endif %}
  
                {% endfor %}
            {% endfor %}
        </tr>

        {% for campagne in campagnes2 %}
            <tr>
                <td rowspan="3">{{campagne.name}}</td>
                {% for ilot in ilots %}
                {% for p in ilot["parcelles"] %}
                
                    <td>{{ p[campagne.name]["name"] }}</td>
                
                {% endfor %}
            {% endfor %}
            </tr>
            <tr>
                <td></td>
                {% for ilot in ilots %}
                {% for p in ilot["parcelles"] %}
                
                    <td>{{ p[campagne.name]["culture"] }}</td>
                
                {% endfor %}
            {% endfor %}
            </tr>
            <tr>
                <td></td>
                {% for ilot in ilots %}
                {% for p in ilot["parcelles"] %}
                
                    <td>{{ p[campagne.name]["surface"] | showHa }}</td>
                
                {% endfor %}
            {% endfor %}
            </tr>
            
        {% endfor %}
        {% for campagne in campagnes2 %}
            
            
        {% endfor %}
        
    
    </table>
</div>


{% endblock %}
