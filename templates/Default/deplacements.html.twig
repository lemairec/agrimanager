{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/deplacement/0'">Ajouter</button>
        Deplacements
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Vehicule</th>
            <th></th>
            <th class="text-right">Litre</th>
        </tr>
        {% for deplacement in deplacements %}
            <tr>
                <td>{{ deplacement.date | showDate | my_path('deplacement', {'deplacement_id': deplacement.id}) | raw }}</td>
                <td>{{deplacement.name}}</td>
                <td>{{deplacement.vehicule}}</td>
                <td>{{deplacement.comment}}</td>
                <td class="text-right">{{ deplacement.km| showUnity("km") }}</td>
            </tr>
        {% endfor %}
    </table>


</div>

{% endblock %}
