{% extends 'base_form.html.twig' %}

{% block body %}

<div class="card mb-3">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_row(form.directory, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
        {% if (document.docName != '') %}
            <div class="form-group row">
                <div class="col-sm-10">
                    <embed src="{{ vich_uploader_asset(document, 'docFile') }}" width="500" height="800" type='application/pdf'>
                </div>
            </div>
        {% else %}
        {% endif %}
        {{ form_row(form.docFile) }}
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" value="Sauvegarder" />
        {{ form_end(form) }}
    </div>

</div>
{% endblock %}
