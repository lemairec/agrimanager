{% extends 'base_agri.html.twig' %}



{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}

{% block submit_widget %}
    {{ form_widget(form, {'attr': {'class': 'btn btn-primary'}}) }}
{% endblock submit_widget %}


{% block body %}

<div class="container bs-docs-container">
    <div class="card mb-3">
<div class="card-body">
    {{ form_start(form) }}
    {{ form_row(form.surface) }}
    {{ form_row(form.name) }}
    {{ form_row(form.culture) }}
    {{ form_end(form) }}
</div></div>

<div class="card", style="width:100%">
    <!-- Default panel contents -->
    <div class="card-header">
        Interventions
    </div>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>{{'Name' | trans}}</th>
            <th></th>
            <th>{{ "%.2f  €/ha"|format(priceHa)}}</th>
            <th></th>
        </tr>
        {% for intervention in interventions %}
        <tr>
            <td><a href="/intervention/{{intervention.id}}">{{intervention.id}}</td>
            <td><b>{{intervention.get_date()}}</b></td>
            <td><b>{{intervention.type}}</b></td>
            <td><b>{{ "%.2f  ha"|format(intervention.surface)}}</b></td>
            <td></td>
            <td><b>{{ "%.2f  €/ha"|format(intervention.getPriceHa())}}</b></td>
        </tr>
        {% for it in intervention.produits %}
        <tr>
            <td></td>
            <td></td>
            <td>{{it.name}}</td>
            <td>{{ "%.2f  u"|format(it.qty)}}</td>
            <td>{{ "%.2f  u/ha"|format(it.qtyha)}}</td>
            <td>{{ "%.2f  €/ha"|format(it.getPriceHa())}}</td>
        </tr>
        {% endfor %}
        {% endfor %}
    </table>
</div>
{% endblock %}
