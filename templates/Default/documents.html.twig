{% extends 'base_agri.html.twig' %}

{% block body %}


    <div class="card">
        <div class="card-header">
            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url("document", {'document_id': 0}) }}'">Ajouter</button>
        </div>
        {% for document in documents %}
        <div class="list-group-item flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">
                    <a href="{{ url("document", {'document_id': document.id}) }}">{{document.repository}}/{{document.name}}
                    </a>
                </h5>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
