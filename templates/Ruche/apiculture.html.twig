{% extends 'base_agri.html.twig' %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url("rucher", {'id': 0}) }}'">{{'Add' | trans }}</button>

            Ruchers
        </div>
        <div class="list-group">
            {% for rucher in ruchers %}
            <div class="list-group-item flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a href="{{ url("rucher", {'id': rucher.id}) }}">{{rucher.lieu}}
                        </a>
                    </h5>
                    <span class="badge">{{ rucher.ruchesCount() }}</span>
                </div>
                {% for ruche in rucher.ruches %}
                <div class="row" style="min-height: 1.5rem;">
                    <div class="col-md-11">
                        <a href="{{ url("ruche", {'id': ruche.id}) }}">{{ruche}}
                        </a>
                    </div>
                </div>
                {% endfor %}

            </div>
            {% endfor %}
        </div>
    </div>

    {% include 'Ruche/_actions.html.twig' %}

    <div class="card">
        <div class="card-header">
            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url("ruche", {'id': 0}) }}'">{{'Add' | trans }}</button>

            Ruches
        </div>
        <div class="list-group">
            {% for ruche in ruches %}
            <div class="list-group-item flex-column align-items-start" style="background-color:{{ ruche.color}};">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a href="{{ url("ruche", {'id': ruche.id}) }}">{{ruche}}
                        </a>
                    </h5>
                    <span class="badge">{{ ruche.nbrCadres }}</span>
                </div>

                {% if ruche.description %}
                <div class="row" style="min-height: 1.5rem;">
                    <div class="col-md-11">
                        {{ruche.description}}
                    </div>
                </div>
                {% endif %}

            </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
