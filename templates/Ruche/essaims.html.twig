{% extends 'base_agri.html.twig' %}

{% block body %}


    <div class="card">
        <div class="card-header">
            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url("essaim", {'id': 0}) }}'">{{'Add' | trans }}</button>

            Essaim
        </div>
        <div class="list-group">
            {% for essaim in essaims %}
            <div class="list-group-item flex-column align-items-start" {% if not essaim.actif %} style="background:#999999"{% endif %}>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a href="{{ url("essaim", {'id': essaim.id}) }}">{{essaim.name}}
                        </a>
                    </h5>
                </div>

                <div class="row" style="min-height: 1.5rem;">
                    <div class="col-md-5">
                        {{essaim.description}}
                    </div>
                    <div class="col-md-5">
                        {% if essaim.parent %}
                        parent : {{essaim.parent}}
                        {% endif %}
                    </div>
                    <div class="col-md-2">
                            {{essaim.dateBegin | showDate }}
                        
                    </div>
                </div>
                <div class="row" style="min-height: 1.5rem;">
                    {% if essaim.ruche %}
                    <div class="col-md-4">
                        {{essaim.ruche.rucher}}
                    </div>
                    <div class="col-md-4">
                        {{essaim.ruche.name}} - {{essaim.ruche.color}}
                    </div>
                    {% endif %}
                </div>

            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
