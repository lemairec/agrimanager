{% extends 'base_agri.html.twig' %}

{% block body %}


<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='{{path('cotation_produit', {'id': 0})}}'">Ajouter</button>
        Produits
    </div>
    <table class="table">
        <tr>
            <th>Produit</th>
            {% for source in sources_c %}
                <th>{{ source }} min</th>
                <th>{{ source }} max</th>
                <th>{{ source }} moy</th>
            {% endfor %}
            {% for source in sources_m %}
                <th>{{ source }}</th>
            {% endfor %}
        </tr>
        {% for res in ress %}
            <tr>
                <td>{{ res["name"]}}</td>
                {% for source in sources_c %}
                    <td>{{ res[source  ~ "_min"] | showEur }}</td>
                    <td>{{ res[source  ~ "_max"] | showEur }}</td>
                    <td>{{ res[source  ~ "_moy"] | showEur }}  </td>
                {% endfor %}
                {% for source in sources_m %}
                    <td>{{ res[source] | showEur }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
