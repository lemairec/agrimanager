{% extends 'base_agri.html.twig' %}

{% block body %}


<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='{{path('cotation', {'id': 0})}}'">Ajouter</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='{{path('cotations_hist')}}'">Hist</button>
        Cotation
    </div>
    <table class="table">
        <tr>
            <th>Source</th>
            <th>Campagne</th>
            <th>Produit</th>
            <th>Date</th>
            <th>Price</th>
            <th>Price Stock</th>
            <th>Price Stock End</th>
        </tr>
        {% for cotation in cotations %}
            <tr>
                <td><a href="/cotation/{{cotation.id}}">{{ cotation.source }}</a></td>
                <td>{{ cotation.campagne }}</td>
                <td>{% if cotation.produit %} {{ cotation.produit }}{% else %}{{cotation.produit_str}}{% endif %}</td>
                <td>{{ cotation.date | showDate }}</td>
                <td>{{ cotation.value | showUnity(" €/t") }}</td>
                <td>{{ cotation.valueStockage | showUnity(" €/t") }}</td>
                <td>{{ cotation.valueStockageEnd | showUnity(" €/t") }}</td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
