{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url("materiels_pdf") }}'">pdf</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/materiel/0'">{{'Add' | trans }}</button>
        Materiels
    </div>
    <table class="table">
        <tr>
            <th>{{'Name' | trans }}</th>
            <th>Année</th>
        </tr>
        {% for materiel in materiels %}
            <tr>
                <td><a href="/materiel/{{materiel.id}}">{{materiel.name}}</a></td>
                <td>{{materiel.type}}</td>
                <td>{{materiel.annee}}</td>
                <td>{{materiel.last_entretien}}</td>
                <td>{{materiel.last_inventaire}}</td>
            </tr>
        {% endfor %}
    </table>
</div>

<div class="card">
    <div class="card-header">
        Vendu
    </div>
    <table class="table">
        <tr>
            <th>{{'Name' | trans }}</th>
            <th>Année</th>
        </tr>
        {% for materiel in materiels_ko %}
            <tr>
                <td><a href="/materiel/{{materiel.id}}">{{materiel.name}}</a></td>
                <td>{{materiel.type}}</td>
                <td>{{materiel.annee}}</td>
                <td>{{materiel.last_entretien}}</td>
                <td>{{materiel.last_inventaire}}</td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
