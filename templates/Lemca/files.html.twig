{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/lemca/achat/0'">Ajouter</button>
        Achats
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Reference</th>
        </tr>
        {% for file in files %}
            <tr>
                <td><a href="/lemca_files/{{file.filename}}">{{ file.datetime | showDatetime }}</a></td>
                <td>{{file.filename}}</td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
