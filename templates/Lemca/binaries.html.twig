{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/lemca/achat/0'">Ajouter</button>
        Achats
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Reference</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        {% for achat in achats %}
            <tr>
                <td><a href="/lemca/achat/{{achat.id}}">{{ achat.datetime | showDate }}</a></td>
                <td>{{achat.reference}}</td>
                <td>{{achat.quantity}}</td>
                <td>{{achat.price}}</td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
