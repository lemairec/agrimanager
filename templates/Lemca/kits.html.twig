{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/lemca/kit/0'">Ajouter</button>
        Kits
    </div>
    <table class="table">
        <tr>
            <th></th>
            <th>Option</th>
            <th></th>
        </tr>
        {% for kit in kits %}
            <tr>
                <td><a href="/lemca/kit/{{kit.id}}">{{kit.client}}</a></td>
                <td>{{kit.option}}</td>
                <td>{{kit.status}}</td>
                <td></td>
            </tr>
            {% for camera in kit.cameras %}
            <tr>
                <td></td>
                <td><a href="/lemca/camera/{{camera.id}}">camera - {{camera.no_fabricant}}</a></td>
                <td>{{camera.ip}}</td>
            </tr>
            {% endfor %}
            {% for panel in kit.panels %}
            <tr>
                <td></td>
                <td><a href="/lemca/panel/{{panel.id}}">{{panel.no_fabricant}}</a></td>
                <td>{{panel.generation}}</td>
            </tr>
             {% endfor %}
        {% endfor %}
    </table>
</div>

{% endblock %}
