{% extends 'base_form.html.twig' %}

{% block body_form %}
    <div class="card">
        <canvas id="myChart"></canvas>
    </div>

    <div class="card">
        <div class="card-header">
            Balises
        </div>
        <div class="list-group">
            {% for temperature in temperatures %}
            <div class="list-group-item flex-column align-items-start">
                <div class="row" style="min-height: 1.5rem;">
                    <div class="col-md-6">
                        {{temperature.datetime| showDatetime}}
                    </div>
                    <div class="col-md-6">
                        {{temperature.temp| showUnity("Â°")}}
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
<script src='/lib/Chart.js/Chart.min.js'></script>
<script>
    var timeFormat = 'DD/MM/YYYY';

    var color = Chart.helpers.color;
    var config = {
        type: 'line',
        data: {
            datasets:[
                {% for chartjs in chartjss %}
                {
                    label: '{{chartjs['annee']}}',
                    fill: false,
                    backgroundColor: '{{chartjs['color']}}',
                    hidden: '{{chartjs['hidden']}}',
                    borderColor: '{{chartjs['color']}}',

                    data: [
                        {% for data in chartjs['data'] %}
                            {
                                x: "{{data['date']}}",
                                y: {{data['value']}},
                                text: "{{data['name']}}"
                            },
                        {% endfor %}
                    ],
                },
                {% endfor %}
            ]
        },
        options: {
            scales: {
                xAxes: [{
                    type: 'time',
                    distribution: 'linear'
                }]
            },
            elements: {
                    point:{
                        radius: 0
                    }
                }
        }
    };

    window.onload = function() {
        var ctx = document.getElementById('myChart').getContext('2d');
        window.myLine = new Chart(ctx, config);

    };
</script>

{% endblock %}