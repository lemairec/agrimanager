{% extends 'base_agri.html.twig' %}

{% block body %}


    <div class="card">
        <div class="card-header">
            Balises
        </div>
        <div class="list-group">
            {% for balise in balises %}
            <div class="list-group-item flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a href="{{ url("silo_balise", {'id': balise.id}) }}">{{balise.name}}
                        </a>
                    </h5>
                </div>

                <div class="row" style="min-height: 1.5rem;">
                    <div class="col-md-4">
                        {{balise.name}}
                    </div>
                    <div class="col-md-2">
                        {{balise.last_update }}
                    </div>
                    <div class="col-md-2">
                        {{balise.last_temp | showUnity("°") }}
                    </div>
                    <div class="col-md-2">
                        {{balise.last_temp2 | showUnity("°") }}
                    </div>
                    <div class="col-md-2">
                        {{balise.last_temp3| showUnity("°") }}
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
