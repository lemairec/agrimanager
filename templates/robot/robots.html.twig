{% extends 'base_agri.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        Robots
    </div>
    <table class="table">
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
        {% for robot in robots %}
            <tr>
                <td><a href="/robot/{{robot.name}}">{{robot.name}}</a></td>
                <td><span class="badge {%if robot.is_connected %}badge-success{%else%}badge-danger{%endif%}">{{ robot.last_update | showDatetime }}</span></td>
            </tr>
        {% endfor %}
    </table>
</div>



{% endblock %}
