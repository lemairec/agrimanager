{% extends 'base_agri.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="ab-vertical-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-4  ab-form-wrapper">

                    {% if error %}
                        <div class="alert alert-danger" role="alert"><p>{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="POST" role="form">
                        <!-- <legend>Login</legend> -->
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>

                        <input id="_submit" class="btn btn-primary ab-rounded" value="{{ 'security.login.submit'|trans }}" type="submit">
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock fos_user_content %}
