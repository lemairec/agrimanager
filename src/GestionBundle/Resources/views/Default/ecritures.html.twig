{% extends 'AgriBundle::base_agri.html.twig' %}
{% import 'AgriBundle::base_agri.html.twig' as base_agri %}

{% block body %}

<div class="container bs-docs-container">

<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Operations
        <button type="button" class="btn btn-primary" onclick="window.location.href='/operation/0'">ADD</button>
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Nom</th>
            <th>Campagne</th>
            <th class="text-right">D</th>
            <th class="text-right">C</th>
            <th class="text-right">Value</th>
        </tr>
        {% for ecriture in ecritures %}
            {% if ecriture['operation_id'] == "annee" %}
                <tr>
                    <th>{{ecriture['name']}}</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th class="text-right">{{ base_agri.show_eur(ecriture['sum_value'])}}</th>
                </tr>
            {% else %}
                <tr>
                    <td><a href="/operation/{{ecriture['operation_id']}}">{{ecriture['date']}}</a></td>
                    <td>{{ecriture['name']}}</td>
                    <td>{{ecriture['campagne']}}</td>
                    {% if not ecriture['ignore']%}

                        {% if ecriture['value'] > 0 %}
                            <td class="text-right"></td>
                            <td class="text-right" style="color: #006e36;">+ {{ base_agri.show_eur(ecriture['value'])}}</td>
                        {% else %}
                            <td class="text-right" style="color: #e70b0b;">{{ base_agri.show_eur(ecriture['value'])}}</td>
                            <td class="text-right"></td>
                        {% endif %}
                    {% else %}
                    {% if ecriture['value'] > 0 %}
                        <td class="text-right"></td>
                        <td class="text-right" style="color: #cccccc;">+ {{ base_agri.show_eur(ecriture['value'])}}</td>
                    {% else %}
                        <td class="text-right" style="color: #cccccc;">{{ base_agri.show_eur(ecriture['value'])}}</td>
                        <td class="text-right"></td>
                    {% endif %}
                    {% endif %}
                    <td class="text-right">{{ base_agri.show_eur(ecriture['sum_value'])}}</td>
                </tr>
            {% endif %}

        {% endfor %}
    </table>
</div>
</div>

{% endblock %}
