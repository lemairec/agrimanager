{% extends 'AgriBundle::base_agri.html.twig' %}



{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}


{% block body %}

<div class="container bs-docs-container">
<div class="well">
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.number) }}
    {{ form_row(form.surface) }}
    {{ form_end(form) }}
</div>

<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Parcelle
    </div>
    <table class="table">
        <tr>
            <th>Campagne</th>
            <th>{{'Name' | trans }}</th>
            <th>Culture</th>
            <th>Surface</th>
        </tr>
        {% for parcelle in parcelles %}
        <tr>
            <td><a href="/parcelle/{{parcelle.id}}">{{parcelle.campagne.name}}</td>
            <td><b>{{parcelle.name}}</b></td>
            <td><b>{{parcelle.culture}}</b></td>
            <td><b>{{ "%.2f  ha"|format(parcelle.surface)}}</b></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
