{% extends 'AgriBundle::base_agri.html.twig' %}



{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}


{% block body %}

<div class="container bs-docs-container">
<div class="well">
    {{ form_start(form) }}
    {{ form_row(form.date, {'attr': {'class': 'form-control js-datepicker'}}) }}
    {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(form.comment, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
</div>

<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Parcelles
        <button type="button" class="btn btn-primary" onclick="window.location.href='/intervention/{{intervention.id}}/parcelle/0'">ADD</button>
    </div>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surface</th>
        </tr>
        {% for it in intervention.parcelles %}
        <tr>
            <td><a href="/intervention/{{intervention.id}}/parcelle/{{it.id}}">{{it.id}}</a></td>
            <td>{{it.parcelle.completeName}}</td>
            <td>{{it.parcelle.surface}}</td>
        </tr>
        {% endfor %}
        <tr>
            <td>TOTAL</td>
            <td></td>
            <td>{{intervention.surface}}</td>
        </tr>
    </table>
</div>
<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Produits
        <button type="button" class="btn btn-primary" onclick="window.location.href='/intervention/{{intervention.id}}/produit/0'">ADD</button>
    </div>
    <table class="table">
        <tr>
            <th>Amm</th>
            <th>Name</th>
            <th>Qty</th>
            <th></th>
        </tr>
        {% for it in intervention.produits %}
        <tr>
            <td><a href="/intervention/{{intervention.id}}/produit/{{it.id}}">{{it.id}}</a></td>
            <td>{{it.produit.completeName}}</td>
            <td>{{it.qty}}</td>
            <td><a href="/intervention/{{intervention.id}}/produit/{{it.id}}/delete">d</td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}


{% block javascripts %}
<script>
$( function() {
    $('#agribundle_intervention_type').on('change',function(e){
        $.post('/intervention/{{intervention.id}}', $('form[name=agribundle_intervention]').serialize())
    });
    $('#agribundle_intervention_comment').on('change',function(e){
        $.post('/intervention/{{intervention.id}}', $('form[name=agribundle_intervention]').serialize())
    });
    $('#agribundle_intervention_date').on('change',function(e){
        $.post('/intervention/{{intervention.id}}', $('form[name=agribundle_intervention]').serialize())
    });
} );
</script>
{% endblock %}
