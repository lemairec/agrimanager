
{% extends 'AgriBundle::base_agri.html.twig' %}

{% block body %}


<div class="container bs-docs-container">
    <div class="panel panel-default", style="width:100%">
        <div class="panel-heading">
            Interventions
            <button type="button" class="btn btn-primary" onclick="window.location.href='/intervention/0'">ADD</button>
        </div>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
            {% for intervention in interventions %}
                <tr>
                    <td><a href="/intervention/{{intervention.id}}">{{intervention.id}}</td>
                    <td><b>{{intervention.get_date()}}</b></td>
                    <td><b>{{intervention.type}}</b></td>
                    <td><b>{{intervention.surface}} ha</b></td>
                    <td><a href="/intervention/{{intervention.id}}/delete">Delete</td>
                </tr>
                {% for it in intervention.parcelles %}
                <tr>
                    <td></td>
                    <td>{{it.parcelle.culture}}</td>
                    <td>{{it.parcelle}}</td>
                    <td>{{it.parcelle.surface}}</td>
                    <td></td>
                </tr>
                {% endfor %}
                {% for it in intervention.produits %}
                <tr>
                    <td></td>
                    <td></td>
                    <td>{{it.name}}</td>
                    <td>{{it.qty}}</td>
                    <td>{{it.qtyha}}</td>
                </tr>
                {% endfor %}
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
