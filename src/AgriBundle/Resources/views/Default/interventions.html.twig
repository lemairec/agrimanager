
{% extends 'AgriBundle::base_agri.html.twig' %}

{% block body %}


<div class="container bs-docs-container">
    <div class="panel panel-default", style="width:100%">
        <div class="panel-heading">
            Interventions
            <button type="button" class="btn btn-primary" onclick="window.location.href='/intervention/0'">ADD</button>
        </div>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
            {% for intervention in interventions %}
                <tr>
                    <td><a href="/intervention/{{intervention.id}}">{{intervention.id}}</td>
                    <td><b>{{intervention.get_date()}}</b></td>
                    <td><b>{{intervention.type}}</b></td>
                    <td class="text-right"><b>{{ "%.2f  ha"|format(intervention.surface)}}</b></td>
                    <td class="text-right"><a href="/intervention/{{intervention.id}}/delete">Delete</td>
                </tr>
                {% if intervention.comment %}
                <tr>
                    <td></td>
                    <td colspan="4" class="text-center"> {{ intervention.comment }} </td>
                </tr>
                {% endif %}
                {% for it in intervention.parcelles %}
                <tr>
                    <td></td>
                    <td>{{it.parcelle.culture}}</td>
                    <td>{{it.parcelle.completeName}}</td>
                    <td class="text-right">{{ "%.2f  ha"|format(it.parcelle.surface)}}</td>
                    <td></td>
                </tr>
                {% endfor %}
                {% for it in intervention.produits %}
                <tr>
                    <td></td>
                    <td></td>
                    <td>{{it.name}}</td>
                    <td class="text-right">{{ "%.2f  u"|format(it.qty)}}</td>
                    <td class="text-right">{{ "%.2f  u/ha"|format(it.qtyha)}}</td>
                </tr>
                {% endfor %}
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
