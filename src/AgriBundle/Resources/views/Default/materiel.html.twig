{% extends 'AgriBundle::base_agri.html.twig' %}



{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}


{% block body %}

<div class="container bs-docs-container">
<div class="well">
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.annee) }}
    {{ form_row(form.caracteristique) }}
    {{ form_row(form.comment) }}
    {{ form_end(form) }}
</div>

{% if (materiel.id != '') %}
<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Entretiens
        <button type="button" class="btn btn-primary" onclick="window.location.href='/materiel/{{materiel.id}}/entretien/0'">ADD</button>
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Nb Heure</th>
            <th>Type</th>
            <th>Description</th>
        </tr>
        {% for entretien in entretiens %}
        <tr>
            <td><a href="/materiel/{{materiel.id}}/entretien/{{entretien.id}}">{{entretien.name}}</td>
            <td><b>{{entretien.nbHeure}}</b></td>
            <td><b>{{entretien.id}}</b></td>
            <td><b>{{ "%.2f  ha"|format(entretien.id)}}</b></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endif %}
{% endblock %}
