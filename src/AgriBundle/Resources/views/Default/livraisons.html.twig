{% extends 'AgriBundle::base_agri.html.twig' %}
{% import 'AgriBundle::base_agri.html.twig' as base_agri %}

{% block body %}


<div class="container bs-docs-container">
    <div class="panel panel-default", style="width:100%">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/livraison/0'">ADD</button>
            Livraisons
        </div>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th class="text-right">Poid norm√©</th>
            </tr>
            {% for livraison in livraisons %}
                <tr>
                    <td><a href="/livraison/{{livraison.id}}">{{livraison.espece}} - {{livraison.name}}</a></td>
                    <td>{{livraison.getDateStr()}}</td>
                    <td class="text-right">{{ base_agri.show_unity(livraison.poid_norme, 't')}}</td>

                </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
