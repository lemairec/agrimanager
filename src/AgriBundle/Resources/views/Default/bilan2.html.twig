{% extends 'AgriBundle::base_agri.html.twig' %}
{% import 'AgriBundle::base_agri.html.twig' as base_agri %}

{% block body %}
<div class="container bs-docs-container">

    <div class="well">


        <div class="panel panel-default", style="width:100%">
            <!-- Default panel contents -->
            <table class="table">
                <tr>
                    <th>Parcelle</th>
                    <th>Culture</th>
                    <th class="text-right">Surface</th>
                    <th class="text-right">Prix</th>
                    <th class="text-right">Rendement</th>
                </tr>
                {% for parcelle in parcelles %}
                <tr  bgcolor='{{ parcelle.cultureColor}}'>
                    <td><a href="/parcelle/{{parcelle.id}}">{{parcelle.completeName}}</a></td>
                    <td>{{parcelle.culture}}</td>
                    <td class="text-right">{{ parcelle.surface | showHa }}</td>
                    <td class="text-right">{{base_agri.show_eur_ha(parcelle.priceHa)}}</td>

                    <td class="text-right">{{base_agri.show_unity(parcelle.poid_norme/parcelle.surface, 't/ha')}}</td>
                </tr>
                {% for key,t in parcelle.details %}
                <tr  bgcolor='{{ parcelle.cultureColor}}'>
                    <td></td>
                    <td></td>
                    <td>{{key}}</td>
                    <td class="text-right">{{base_agri.show_eur_ha(t)}}</td>
                    <td></td>
                </tr>
                {% endfor %}
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="well">


        <div class="panel panel-default", style="width:100%">
            <!-- Default panel contents -->
            <table class="table">
                <tr>
                    <th>Parcelle</th>
                    <th>Culture</th>
                    <th class="text-right">Surface</th>
                    <th class="text-right">Prix</th>
                    <th class="text-right">Poid Norme</th>
                    <th class="text-right">Rendement</th>
                </tr>
                {% for culture in cultures %}
                <tr>
                    <td></td>
                    <td>{{culture['culture']}}</td>
                    <td class="text-right">{{ culture['surface'] | showHa }}</td>
                    <td class="text-right">{{base_agri.show_eur_ha(culture['priceHa']/culture['surface'])}}</td>
                    <td class="text-right">{{base_agri.show_unity(culture['poid_norme'], 't')}}</td>
                    <td class="text-right">{{base_agri.show_unity(culture['poid_norme']/culture['surface'], 't/ha')}}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
