{% extends 'AgriBundle::base_agri.html.twig' %}

{% block body %}
<div class="container bs-docs-container">

    {% for parcelle in parcelles %}
        <div class="well">


            <div class="panel panel-default", style="width:100%">
                <!-- Default panel contents -->
                <table class="table">
                    <tr>
                        <th>Parcelle</th>
                        <th>{{ parcelle.completeName }}</th>
                    </tr>
                    <tr>
                        <td>Surface</td>
                        <td>{{ parcelle.surface }} ha</td>
                    </tr>
                    <tr>
                        <td>Culture</td>
                        <td>{{ parcelle.culture }}</td>
                    </tr>
                    <div>{{ parcelle.comment }}</div>
                    <tr>
                        <td>N</td>
                        <td>{{ "%d"|format(parcelle.n)}}</td>
                    </tr>
                    <tr>
                        <td>P - K - Mg - S</td>
                        <td>{{ "%d"|format(parcelle.p)}} - {{ "%d"|format(parcelle.k)}} - {{ "%d"|format(parcelle.mg)}} - {{ "%d"|format(parcelle.s)}}</td>
                    </tr>
                </table>
            </div>

            <div class="panel panel-default", style="width:100%">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    Interventions
                </div>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th></th>
                        <th>{{ "%.2f  €/ha"|format(parcelle.priceHa)}}</th>
                        <th></th>
                    </tr>
                    {% for intervention in parcelle.interventions %}
                        <tr>
                            <td><a href="/intervention/{{intervention.id}}">{{intervention.get_date()}}</td>
                            <td><b>{{intervention.type}}</b></td>
                            <td><b>{{ "%.2f  ha"|format(intervention.surface)}}</b></td>
                            <td></td>
                            <td><b>{{ "%.2f  €/ha"|format(intervention.getPriceHa())}}</b></td>
                        </tr>
                        {% for it in intervention.produits %}
                            <tr>
                                <td></td>
                                <td>{{it.name}}</td>
                                <td>{{ "%.2f  u"|format(it.qty)}}</td>
                                <td>{{ "%.2f  u/ha"|format(it.qtyha)}}</td>
                                <td>{{ "%.2f  €/ha"|format(it.getPriceHa())}}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
