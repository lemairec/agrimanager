{% extends 'AppBundle::base_agri.html.twig' %}

{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}


{% block body %}

<div class="container bs-docs-container">
    <div class="well">
        {{ form_start(form) }}
        {{ form_row(form.date, {'attr': {'class': 'form-control js-datepicker'}}) }}
        {{ form_row(form.name) }}
        {{ form_end(form) }}
    </div>

<div class="panel panel-default", style="width:100%">
    <!-- Default panel contents -->
    <div class="panel-heading">
        Ecritures
        <button type="button" class="btn btn-primary" onclick="window.location.href='/operation/{{operation.id}}/ecriture/0'">ADD</button>
    </div>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>D</th>
            <th>C</th>
        </tr>
        {% for ecriture in operation.ecritures %}
            <tr>
                <td><a href="/operation/{{operation.id}}/ecriture/{{ecriture.id}}">{{ecriture.compte.name}}</a></td>
                {% if(ecriture.value > 0) %}
                <td>{{ base.show_eur( ecriture.value) }} </a></td>
                <td></td>
                {% else %}
                <td></td>
                <td>{{ base.show_eur( ecriture.value) }} </a></td>
                {% endif %}

            </tr>

        {% endfor %}
        <tr>
            <th>Total</th>
            <th>{{ base.show_eur( operation.getTotalD()) }}</th>
            <th>{{ base.show_eur( operation.getTotalC()) }}</th>
        </tr>
    </table>

</div>

{% endblock %}
